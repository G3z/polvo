{
  "name": "coffee-toaster",
  "version": "0.6.11",
  "author": "Anderson Arboleya <anderson@arboleya.me>",
  "description": "Minimalist build system for CoffeeScript.",
  "keywords": ["coffeescript", "build", "namespace", "tool"],

  "main" : "./src/cli/toaster",
  "directories": {"lib": "./lib/"},
  "scripts": { "test": "make test" },

  "repository": {
    "type": "git",
    "url": "http://github.com/serpentem/coffee-toaster"
  },

  "bin": {
    "toaster" : "./bin/toaster",
    "_toasted_coffee": "./node_modules/coffee-script/bin/coffee"
  },
  "engines": { "node": ">= 0.8.14" },

  "dependencies": {
    "fs-util": "0.3.x",
    "coffee-script" : "1.4.x",
    "connect":"2.7.x",
    "uglify-js": "1.1.x",
    "optimist": "0.2.x",
    "colors": "0.5.x",
    "vows" : "0.6.x",
    "xregexp":"2.0.0"
  },

  "optionalDependencies": { "growl": "1.2.x" }
}