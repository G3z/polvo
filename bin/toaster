#!/usr/bin/env bash

# ABSOLUTE PATH FOR THIS VERY EXECUTABLE FILE
SELF=$(dirname $0)/$(dirname $(readlink -n $0))

# ONE FOLDER UP (ROOT OF PROJECT)
ROOT=$SELF/..

# COFFEE EXECUTABLE INSIDE `node_modules`
CS=$ROOT/node_modules/coffee-script/bin/coffee

# TOASTER MAIN FILE
MAIN=$ROOT/src/toaster.coffee

# FORMATTING COMMAND
COMMAND="$CS $MAIN --auto-init $@"

# EXECUTING IT
eval $COMMAND