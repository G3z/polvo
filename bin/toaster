#!/usr/bin/env bash

# ABSOLUTE PATH FOR THIS VERY EXECUTABLE FILE
SELF=$(dirname $0)/$(dirname $(readlink -n $0))

# ONE FOLDER UP (ROOT OF PROJECT)
ROOT=$SELF/..

# COFFEE EXECUTABLE INSIDE `node_modules`
COFFEE=$ROOT/node_modules/coffee-script/SELF/coffee

# TOASTER MAIN FILE
TOASTER=$ROOT/src/toaster.coffee

# FORMATTING COMMAND
COMMAND="$COFFEE $TOASTER --auto-init $@"

# EXECUTING IT
eval $COMMAND